# Yabai configuration

#Layout
yabai -m config layout bsp

# New window spawn
yabai -m config window_placement second_child

# Gap between windows
yabai -m config top_padding    7
yabai -m config bottom_padding 7
yabai -m config left_padding   7
yabai -m config right_padding  7
yabai -m config window_gap     7

# Mouse configuration
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_drop_action swap

yabai -m config --space 1 layout float
yabai -m config --space 3 layout float

# Don't manage these apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^Mail$" manage=off
yabai -m rule --add app="^Zoom$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Facetime$" manage=off
yabai -m rule --add app="^GarageBand$" manage=off
yabai -m rule --add app="^PokerStarsPT$" manage=off
yabai -m rule --add app="^Docker Desktop$" manage=off
yabai -m rule --add app="^Books$" manage=off
yabai -m rule --add app="^Lens$" manage=off
