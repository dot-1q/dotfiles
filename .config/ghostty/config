# Configuration
shell-integration = zsh
window-theme = system
bold-is-bright = true
clipboard-read = allow
clipboard-write = allow
cursor-style = bar
font-size = 13.5
window-padding-balance = true

# Gruvbox-material colorscheme
theme = gruvbox-material-hard-dark

# Font specification
font-family = JetBrains Mono NL
font-style = Regular
font-style-bold = Bold
font-style-italic = Regular Italic
font-style-bold-italic = Bold Italic

# Map 'Command+a' to 'Ctrl-b'. This is usefull to remap the tmux default
# prefix command to a more ergonomic position.
keybind = super+a=text:\x02
# Map 'Command+s' to 'Ctrl-s'. Same as above but this is to send the prefix remotely for nested tmux session.
keybind = super+s=text:\x13
